<Window x:Class="AVL_DBMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AVL_DBMS"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" ResizeMode="NoResize" WindowStyle="None" Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Background="#222" Height="30" VerticalAlignment="Top" 
                   MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <TextBlock Text="AVL Tree Database Manager" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold" FontSize="14"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Width="30" Content="🗕" Click="Minimize_Click"/>
                <Button Width="30" Content="▢" Click="Maximize_Click"/>
                <Button Width="30" Content="✕" Click="Exit_Click"/>
            </StackPanel>
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15" Orientation="Vertical">
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="3" Margin="0,3">
                        <StackPanel Margin="3">
                            <Label Content="Керування файлами:" FontWeight="Bold" />

                            <Button Content="Нова БД" Margin="3" Padding="5" 
                                Command="{Binding NewDatabaseCommand}"/>

                            <Label Content="Відкрити існуючу:" Margin="3,5,3,0" />
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <ComboBox Margin="3" Padding="5"
                                  ItemsSource="{Binding DatabaseFiles}"
                                  SelectedItem="{Binding SelectedDatabaseFile}"
                                  IsEditable="False"/>

                                <Button Grid.Column="1" 
                                Content="✕" 
                                Command="{Binding DeleteDatabaseCommand}"
                                Margin="3" 
                                Padding="5,0"
                                Width="30"
                                FontSize="14"
                                FontWeight="Bold"
                                ToolTip="Видалити обраний файл"/>
                            </Grid>                              

                            <Label Content="Зберегти як (ім'я файлу):" Margin="3,5,3,0" />
                            <TextBox Margin="3" Padding="5"
                                 Text="{Binding DatabaseNameInput}"/>

                            <Button Content="Зберегти" Margin="3" Padding="5" 
                                Command="{Binding SaveDatabaseCommand}"/>
                        </StackPanel>
                    </Border>

                    <Label Content="Ключ (Key):" FontWeight="Bold" />
                    <TextBox x:Name="KeyInputTextBox" Margin="0,0,0,5" FontSize="14" Padding="5"
                         Text="{Binding KeyInput}"/>
                    <Label Content="Дані (Value):" FontWeight="Bold" />
                    <TextBox x:Name="ValueInputTextBox" Margin="0,0,0,10" FontSize="14" Padding="5"
                         Text="{Binding ValueInput}"/>

                    <Grid Margin="0,5,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Button Grid.Row="0" Grid.Column="0" Content="Додати" Margin="3" Padding="8" 
                            Command="{Binding AddCommand}"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="Знайти" Margin="3" Padding="8" 
                            Command="{Binding SearchCommand}"/>

                        <Button Grid.Row="1" Grid.Column="0" Content="Редагувати" Margin="3" Padding="8"
                            Command="{Binding EditCommand}"/>

                        <Button Grid.Row="1" Grid.Column="1" Content="Видалити" Margin="3" Padding="8" 
                            Command="{Binding RemoveCommand}"/>
                    </Grid>
                    <Label Content="Генерація даних:" FontWeight="Bold" Margin="0,10,0,0" />

                    <TextBlock Text="Кількість записів (макс. 50,000):" Margin="5,0,5,2"/>
                    <TextBox x:Name="GenerationCountTextBox" Margin="5,0,5,3" Padding="5"
                    Text="{Binding GenerationCountInput}"/>

                    <Button Content="Згенерувати" Margin="3" Padding="8" Background="#DDEEFF"
                    Command="{Binding GenerateDataCommand}"/>
                </StackPanel>
            </ScrollViewer>

            <Border Grid.Column="1" Margin="10,15,15,15" BorderBrush="Gray" BorderThickness="1" 
                    Background="White" CornerRadius="5">
                <ScrollViewer x:Name="TreeScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Canvas x:Name="VisualizationCanvas">
                    </Canvas>
                </ScrollViewer>                
            </Border>

        </Grid>
        <Border Grid.Row="2" Background="#222" MinHeight="30">
            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="StatusTextBlock" Grid.Column="0" 
                           VerticalAlignment="Center" 
                           Foreground="White" 
                           FontSize="12"
                           Text="{Binding StatusMessage}"/>

                <TextBlock Grid.Column="1" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Right"
                           Foreground="LightGray" 
                           FontSize="12"
                           Margin="20,0,0,0">
                    <Run Text="Елементів у БД:"/>
                    <Run Text="{Binding CurrentTreeCount, Mode=OneWay}" FontWeight="Bold"/>
                </TextBlock>
            </Grid>                
        </Border>
    </Grid>
</Window>
